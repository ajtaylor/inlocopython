extends layout-base.html

block content
  .row-fluid
    .span10.offset1
      form.form-horizontal(action="/api/user/login", method="post")
        fieldset
          .row-fluid
            legend.span12 Login
          .row-fluid
            .control-group.span12
              label.control-label.span2(for="email_address") Email
              .controls
                input.span10(type="text", id="email_address", placeholder="Email address", name="email_address")
          .row-fluid
            .control-group.span12
              label.control-label.span2(for="password") Password
              .controls
                input.span6(type="password", id="password", placeholder="Password", name="password")
          .row-fluid
            .form-actions
              p
                button.btn.btn-primary(type="submit") Login